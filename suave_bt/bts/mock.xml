<?xml version="1.0"?>
<root main_tree_to_execute="MainTree">
    <!-- ////////// -->
    <BehaviorTree ID="MainTree">
        <RetryUntilSuccessful num_attempts="-1">
            <ReactiveSequence>
                <ReactiveFallback>
                    <ReactiveSequence>
                        <Condition ID="MockPipelineFound"/>
                        <Condition ID="MockEnoughBattery"/>
                        <ReactiveFallback>
                            <Condition ID="MockPipelineInspected"/>
                            <Action ID="MockInspectPipeline"/>
                        </ReactiveFallback>
                    </ReactiveSequence>
                    <ReactiveSequence>
                        <Condition ID="MockEnoughBattery"/>
                        <ReactiveFallback>
                            <Condition ID="MockPipelineFound"/>
                            <Action ID="MockSearchPipeline"/>
                        </ReactiveFallback>
                    </ReactiveSequence>
                    <ReactiveSequence>
                        <Inverter>
                            <Condition ID="MockEnoughBattery"/>
                        </Inverter>
                        <Action ID="MockRechargeBattery"/>
                    </ReactiveSequence>
                </ReactiveFallback>
                <Condition ID="MockPipelineInspected"/>
            </ReactiveSequence>
        </RetryUntilSuccessful>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="MockEnoughBattery"/>
        <Action ID="MockInspectPipeline"/>
        <Condition ID="MockPipelineFound"/>
        <Condition ID="MockPipelineInspected"/>
        <Action ID="MockRechargeBattery"/>
        <Action ID="MockSearchPipeline"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
