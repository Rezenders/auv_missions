<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="MainTree">
    <RetryUntilSuccessful num_attempts="-1">
      <ReactiveSequence>
        <ReactiveFallback>
          <ReactiveSequence>
            <IsPipelineFound/>
            <ReactiveFallback>
              <IsPipelineInspected/>
              <ReactiveSequence>
                <IsTaskFeasible task_name="inspect_pipeline"/>
                <inspect_pipeline/>
              </ReactiveSequence>
            </ReactiveFallback>
          </ReactiveSequence>
          <ReactiveFallback>
            <IsPipelineFound/>
            <ReactiveSequence>
              <IsTaskFeasible task_name="search_pipeline"/>
              <search_pipeline/>
            </ReactiveSequence>
          </ReactiveFallback>
        </ReactiveFallback>
        <ReactiveSequence>
          <IsPipelineFound/>
          <IsPipelineInspected/>
        </ReactiveSequence>
      </ReactiveSequence>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <BehaviorTree ID="inspect_tree">
    <ReactiveSequence>
      <IsTaskFeasible task_name="inspect_pipeline"/>
      <inspect_pipeline/>
    </ReactiveSequence>
  </BehaviorTree>

  <BehaviorTree ID="recharge_tree">
    <ReactiveSequence>
      <IsTaskFeasible task_name="recharge"/>
      <recharge/>
    </ReactiveSequence>
  </BehaviorTree>

  <BehaviorTree ID="search_tree">
    <ReactiveSequence>
      <IsTaskFeasible task_name="search_pipeline"/>
      <search_pipeline/>
    </ReactiveSequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Condition ID="IsPipelineFound"/>
    <Condition ID="IsPipelineInspected"/>
    <Condition ID="IsTaskFeasible"
               editable="true">
      <input_port name="task_name"/>
    </Condition>
    <Action ID="inspect_pipeline"/>
    <Action ID="recharge"/>
    <Action ID="search_pipeline"/>
  </TreeNodesModel>

</root>
